<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaKataSandi">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_back"
                        android:id="@+id/iv_kembali"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            android:text="Lupa Kata Sandi"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textSize="14dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Silahkan masukan email anda. Anda akan \n menerima link via email tersebut untuk mengatur \nulang kata sandi anda."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/edt_text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:layout_centerInParent="true"
                android:hint="Email atau nama pengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_lupa_kata_sandi"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="Kirim"
            android:background="@drawable/btn_side_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>